<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#FFF9C4" tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="138dp"
        android:layout_height="138dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewLoadingStatus" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:background="@drawable/ic_splash_background"
        android:src="@drawable/splash_logo"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:layout_marginBottom="24dp" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieLoadingDots"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:lottie_rawRes="@raw/lodingbar"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLoadingStatus"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewLoadingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인 확인 중..."
        android:textSize="20sp"
        android:textColor="#FFC107" android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lottieLoadingDots"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>