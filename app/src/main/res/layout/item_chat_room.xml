<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/chatRoomImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="채팅방 이미지" />

    <TextView
        android:id="@+id/chatRoomNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/chatRoomImageView"
        app:layout_constraintTop_toTopOf="@id/chatRoomImageView"
        app:layout_constraintEnd_toStartOf="@+id/unreadCountTextView"
        app:layout_constraintHorizontal_bias="0"
        tools:text="홍길동 친구들" />

    <TextView
        android:id="@+id/lastMessageTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/chatRoomImageView"
        app:layout_constraintTop_toBottomOf="@id/chatRoomNameTextView"
        app:layout_constraintEnd_toStartOf="@+id/lastMessageTimeTextView"
        app:layout_constraintHorizontal_bias="0"
        tools:text="나, 김길동 ... ㅋㅋ" />

    <TextView
        android:id="@+id/unreadCountTextView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/red_circle_background"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/chatRoomNameTextView"
        app:layout_constraintBottom_toBottomOf="@id/chatRoomNameTextView"
        tools:text="3" />

    <TextView
        android:id="@+id/lastMessageTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/unreadCountTextView"
        app:layout_constraintBottom_toTopOf="@id/buttonsLayout"
        app:layout_constraintVertical_bias="0.5"
        tools:text="오후 3:45" />

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lastMessageTimeTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" tools:visibility="visible">

        <Button
            android:id="@+id/muteButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="알림끄기"
            android:textSize="12sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginEnd="8dp"
            style="?attr/materialButtonOutlinedStyle" />

        <Button
            android:id="@+id/leaveButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="나가기"
            android:textSize="12sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            style="?attr/materialButtonOutlinedStyle"
            android:textColor="@android:color/holo_red_dark"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>